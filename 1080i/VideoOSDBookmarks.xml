                <onright>3</onright>
                <ondown>2</ondown>
                <onup>2</onup>
                <scrolltime>200</scrolltime>
                <viewtype label="536">icon</viewtype>
                <pagecontrol>-</pagecontrol>
                <orientation>horizontal</orientation>

                <itemlayout height="300" width="360">

                    <control type="image">
