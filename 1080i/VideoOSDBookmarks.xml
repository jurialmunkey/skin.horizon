                    </control>

                    <control type="image">
                        <left>20</left>
                        <right>20</right>
                        <top>20</top>
                        <bottom>70</bottom>
                        <aspectratio>scale</aspectratio>
                        <info>ListItem.Icon</info>
                    </control>

                    <control type="label">
                        <centerleft>50%</centerleft>
                        <top>255</top>
                        <width>330</width>
                        <height>23</height>
                        <align>center</align>
                        <font>font_tiny</font>
                        <label>$INFO[ListItem.Label]$INFO[ListItem.Label2, ,]</label>
                    </control>

                </itemlayout>

                <focusedlayout height="300" width="360">

                    <control type="image">
                        <left>10</left>
                        <right>10</right>
                        <top>10</top>
                        <bottom>60</bottom>
                        <texture border="5" colordiffuse="$VAR[ColorHighlight]">common/box.png</texture>
                    </control>

                    <control type="image">
                        <left>20</left>
                        <right>20</right>
                        <top>20</top>
