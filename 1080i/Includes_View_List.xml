<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="View_List">
        <definition>
            <!-- Poster List -->
            <control type="group">
                <visible>Control.IsVisible(50)</visible>
                <top>0</top>
                <left>0</left>
                <right>80</right>
                <bottom>0</bottom>
                <control type="fixedlist" id="50">
                    <viewtype label="$LOCALIZE[535]">list</viewtype>
                    <include content="View_Forced">
                        <param name="string" value="$LOCALIZE[535]" />
                    </include>
                    <include>View_List_Layout</include>
                </control>
            </control>

            <!-- Info List -->
            <control type="group">
                <visible>Control.IsVisible(55)</visible>
                <top>0</top>
                <left>0</left>
                <right>80</right>
                <bottom>0</bottom>
                <control type="fixedlist" id="55">
                    <viewtype label="$LOCALIZE[31164]">list</viewtype>
                    <include content="View_Forced">
                        <param name="string" value="$LOCALIZE[31164]" />
                    </include>
                    <visible>![Window.IsVisible(MyPVRChannels.xml) | Window.IsVisible(MyPVRGuide.xml) | Window.IsVisible(MyPVRRecordings.xml) | Window.IsVisible(MyPVRTimers.xml) | Window.IsVisible(MyPVRSearch.xml) | Window.IsVisible(MyPlaylist.xml)]</visible>
                    <visible>Container.Content(movies) | Container.Content(sets) | Container.Content(episodes) | Container.Content(tvshows) | Container.Content(seasons)</visible>
                    <top>472</top>
                    <height>420</height>
                    <focusposition>2</focusposition>
                    <movement>2</movement>
                    <include content="View_List_Layout">
                        <param name="id" value="55" />
                        <param name="height" value="84"/>
                        <param name="offset" value="20" />
                    </include>
                </control>
                <control type="group">
                    <top>472</top>
                    <left>596</left>
                    <control type="image">
                        <height>1</height>
                        <top>0</top>
                        <texture colordiffuse="highlight_bottombar">common/white.png</texture>
                    </control>
                    <control type="image">
                        <height>1</height>
                        <top>-1</top>
                        <texture colordiffuse="darkline_separator">common/white.png</texture>
                    </control>
                </control>
                <include content="View_Posters_Info">
                    <param name="bottom" value="470" />
                    <param name="id" value="55" />
                    <param name="left" value="646" />
                    <param name="right" value="50" />
                    <param name="width" value="1056" />
                    <param name="discart" value="false" />
                </include>
            </control>

        </definition>
    </include>

    <include name="View_List_PVR">
        <control type="group">
            <visible>Control.IsVisible(50)</visible>
            <height>566</height>
            <left>0</left>
            <right>80</right>
            <bottom>0</bottom>
            <control type="fixedlist" id="50">
                <focusposition>2</focusposition>
                <movement>2</movement>
                <viewtype label="535">list</viewtype>
                <include content="View_List_Layout">
                    <param name="left" value="0" />
                    <param name="width" value="1754" />
                    <param name="height" value="113" />
                    <param name="offset" value="20" />
                </include>
            </control>
            <control type="group">
                <control type="image">
                    <height>1</height>
                    <top>0</top>
                    <texture colordiffuse="highlight_bottombar">common/white.png</texture>
                </control>
                <control type="image">
                    <height>1</height>
                    <top>-1</top>
                    <texture colordiffuse="darkline_separator">common/white.png</texture>
                </control>
            </control>
        </control>
    </include>


    <include name="View_List_Layout">
        <param name="id" default="50" />
        <param name="left" default="view_left" />
        <param name="width" default="view_width" />
        <param name="height" default="99.33" />
        <param name="offset" default="0" />
        <definition>
            <description>Plugin Content Widget</description>
            <focusposition>4</focusposition>
            <movement>4</movement>
            <width>$PARAM[width]</width>
            <left>$PARAM[left]</left>
            <top>0</top>
            <include condition="!Window.IsVisible(DialogVideoInfo.xml)">View_Movement_Horizontal</include>
            <preloaditems>2</preloaditems>
            <orientation>vertical</orientation>
            <pagecontrol>60</pagecontrol>
            <onfocus>SetProperty(ViewType,List,Home)</onfocus>
            <scrolltime tween="quadratic">400</scrolltime>
            <itemlayout width="$PARAM[width]" height="$PARAM[height]">

                <control type="group">
                    <left>$PARAM[offset]</left>
                    <right>$PARAM[offset]</right>
                    <control type="group">
                        <visible>!Window.IsVisible(MyPVRChannels.xml)</visible>
                        <control type="image">
                            <centertop>50%</centertop>
                            <left>30</left>
                            <width>32</width>
                            <height>32</height>
                            <texture colordiffuse="main_fg_70">$VAR[Image_Overlay_List]</texture>
                            <visible>!String.IsEmpty(ListItem.Overlay)</visible>
                        </control>
                        <control type="image">
                            <centertop>50%</centertop>
                            <left>16</left>
                            <width>64</width>
                            <height>64</height>
                            <texture colordiffuse="main_fg_70" fallback="DefaultFolder.png">$VAR[Image_FallbackIcon]</texture>
                            <visible>String.IsEmpty(ListItem.Overlay)</visible>
                        </control>    
                        <control type="label">
                            <left>86</left>
                            <width>80</width>
                            <height>100%</height>
                            <aligny>center</aligny>
                            <textcolor>main_fg_30</textcolor>
                            <font>font_small</font>
                            <label>$INFO[ListItem.Year]</label>
                            <animation effect="slide" start="0" end="8" condition="String.IsEmpty(ListItem.Overlay)">Conditional</animation>
                            <visible>!String.IsEmpty(ListItem.Year) + Container.Content(movies)</visible>
                        </control>
                        <control type="label">
                            <animation effect="slide" start="0" end="-80" condition="String.IsEmpty(ListItem.Year) | !Container.Content(movies)">Conditional</animation>
                            <left>166</left>
                            <right>30</right>
                            <height>100%</height>
                            <aligny>center</aligny>
                            <textcolor>main_fg_70</textcolor>
                            <font>font_small</font>
                            <animation effect="slide" start="0" end="8" condition="String.IsEmpty(ListItem.Overlay)">Conditional</animation>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="label">
                            <left>30</left>
                            <right>30</right>
                            <align>right</align>
                            <height>100%</height>
                            <aligny>center</aligny>
                            <textcolor>main_fg_30</textcolor>
                            <font>font_small</font>
                            <label>$INFO[ListItem.Label2]</label>
                        </control>
                        
                    </control>
                    <control type="group">
                        <left>20</left>
                        <visible>Window.IsVisible(MyPVRChannels.xml)</visible>
                        <control type="image">
                            <bordersize>10</bordersize>
                            <height>$PARAM[height]</height>
                            <width>$PARAM[height]</width>
                            <texture>$INFO[ListItem.Icon]</texture>
                        </control>
                        <control type="group">
                            <left>$PARAM[height]</left>
                            <control type="label">
                                <left>30</left>
                                <width>340</width>
                                <height>100%</height>
                                <aligny>center</aligny>
                                <textcolor>main_fg_30</textcolor>
                                <font>font_small</font>
                                <label>$INFO[ListItem.ChannelNumber,,. ]$INFO[ListItem.ChannelName,,]</label>
                            </control>
                            <control type="label">
                                <left>400</left>
                                <right>300</right>
                                <height>100%</height>
                                <aligny>center</aligny>
                                <textcolor>main_fg_70</textcolor>
                                <font>font_small</font>
                                <label>$INFO[ListItem.Title]</label>
                            </control>
                            <control type="label">
                                <left>800</left>
                                <right>285</right>
                                <height>100%</height>
                                <aligny>center</aligny>
                                <align>right</align>
                                <textcolor>main_fg_30</textcolor>
                                <font>font_small</font>
                                <scroll>false</scroll>
                                <label>$INFO[ListItem.NextTitle]</label>
                            </control>
                            <control type="label">
                                <width>280</width>
                                <right>30</right>
                                <height>100%</height>
                                <aligny>center</aligny>
                                <align>right</align>
                                <textcolor>main_fg_30</textcolor>
                                <font>font_small</font>
                                <scroll>false</scroll>
                                <label>$INFO[ListItem.StartTime,   (,]$INFO[ListItem.EndTime, | ,)]</label>
                            </control>
                        </control>
                    </control>
                </control>
            </itemlayout>
            <focusedlayout width="$PARAM[width]" height="$PARAM[height]">
                <include content="View_Position_Button">
                    <param name="id" value="$PARAM[id]" />
                    <param name="setfanart" value="$PARAM[setfanart]" />
                </include>

                <control type="group">
                    <control type="group">
                        <animation type="Focus" condition="!Skin.HasSetting(BounceAnimations) + Container($PARAM[id]).OnNext" reversible="false">
                            <effect type="slide" start="0,-50" end="0,0" time="300" tween="back" easing="out" />
                        </animation>
                        <animation type="Focus" condition="!Skin.HasSetting(BounceAnimations) + Container($PARAM[id]).OnPrevious" reversible="false">
                            <effect type="slide" start="0,50" end="0,0" time="300" tween="back" easing="out" />
                        </animation>
                        <control type="image">
                            <top>-10</top>
                            <bottom>-10</bottom>
                            <right>-10</right>
                            <left>-10</left>
                            <bordersize>10</bordersize>
                            <!-- <bordertexture border="12">common/nofocus-shadow10.png</bordertexture> -->
                            <texture colordiffuse="PosterBack">common/white.png</texture>
                            <aspectratio>scale</aspectratio>
                        </control>
                        <control type="image">
                            <height>1</height>
                            <bottom>1</bottom>
                            <texture colordiffuse="highlight_bottombar">common/white.png</texture>
                        </control>
                        <control type="image">
                            <height>1</height>
                            <bottom>0</bottom>
                            <texture colordiffuse="darkline_separator">common/white.png</texture>
                        </control>
                        <control type="group">
                            <height>8</height>
                            <bottom>0</bottom>
                            <visible>Control.HasFocus($PARAM[id])</visible>
                            <control type="image">
                                <texture colordiffuse="$VAR[ColorHighlight]" flipx="true">common/white.png</texture>
                            </control>
                            <control type="image">
                                <texture colordiffuse="$VAR[ColorHighlight2]">common/gradient-diffuse-horizontal.png</texture>
                            </control>
                        </control>
                        <control type="image">
                            <height>1</height>
                            <top>-1</top>
                            <texture colordiffuse="highlight_bottombar">common/white.png</texture>
                        </control>
                        <control type="image">
                            <height>1</height>
                            <top>-2</top>
                            <texture colordiffuse="darkline_separator">common/white.png</texture>
                        </control>
                    </control>

                    <control type="group">
                        <left>$PARAM[offset]</left>
                        <right>$PARAM[offset]</right>
                        <control type="group">
                            <visible>!Window.IsVisible(MyPVRChannels.xml)</visible>
                            <control type="image">
                                <centertop>50%</centertop>
                                <left>30</left>
                                <width>32</width>
                                <height>32</height>
                                <texture colordiffuse="Selected">$VAR[Image_Overlay_List]</texture>
                                <visible>!String.IsEmpty(ListItem.Overlay)</visible>
                            </control>
                            <control type="image">
                                <centertop>50%</centertop>
                                <left>16</left>
                                <width>64</width>
                                <height>64</height>
                                <texture colordiffuse="Selected" fallback="DefaultFolder.png">$VAR[Image_FallbackIcon]</texture>
                                <visible>String.IsEmpty(ListItem.Overlay)</visible>
                            </control>
                            <control type="label">
                                <left>86</left>
                                <width>80</width>
                                <height>100%</height>
                                <aligny>center</aligny>
                                <textcolor>Selected</textcolor>
                                <font>font_small</font>
                                <label>$INFO[ListItem.Year]</label>
                                <animation effect="slide" start="0" end="8" condition="String.IsEmpty(ListItem.Overlay)">Conditional</animation>
                                <visible>!String.IsEmpty(ListItem.Year) + Container.Content(movies)</visible>
                            </control>
                            <control type="label">
                                <animation effect="slide" start="0" end="-80" condition="String.IsEmpty(ListItem.Year) | !Container.Content(movies)">Conditional</animation>
                                <left>166</left>
                                <right>30</right>
                                <height>100%</height>
                                <aligny>center</aligny>
                                <textcolor>Selected</textcolor>
                                <font>font_small</font>
                                <animation effect="slide" start="0" end="8" condition="String.IsEmpty(ListItem.Overlay)">Conditional</animation>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                            <control type="label">
                                <left>30</left>
                                <right>30</right>
                                <align>right</align>
                                <height>100%</height>
                                <aligny>center</aligny>
                                <textcolor>Selected</textcolor>
                                <font>font_small</font>
                                <label>$INFO[ListItem.Label2]</label>
                            </control>
                        </control>
                        <control type="group">
                        <left>20</left>
                        <visible>Window.IsVisible(MyPVRChannels.xml)</visible>
                        <control type="image">
                            <bordersize>10</bordersize>
                            <height>$PARAM[height]</height>
                            <width>$PARAM[height]</width>
                            <texture>$INFO[ListItem.Icon]</texture>
                        </control>
                        <control type="group">
                            <left>$PARAM[height]</left>
                            <control type="label">
                                <left>30</left>
                                <width>340</width>
                                <height>100%</height>
                                <aligny>center</aligny>
                                <textcolor>Selected</textcolor>
                                <font>font_small</font>
                                <label>$INFO[ListItem.ChannelNumber,,. ]$INFO[ListItem.ChannelName,,]</label>
                            </control>
                            <control type="label">
                                <left>400</left>
                                <right>300</right>
                                <height>100%</height>
                                <aligny>center</aligny>
                                <textcolor>Selected</textcolor>
                                <font>font_small</font>
                                <label>$INFO[ListItem.Title]</label>
                            </control>
                            <control type="label">
                                <left>800</left>
                                <right>285</right>
                                <height>100%</height>
                                <aligny>center</aligny>
                                <align>right</align>
                                <textcolor>Selected</textcolor>
                                <font>font_small</font>
                                <scroll>false</scroll>
                                <label>$INFO[ListItem.NextTitle]</label>
                            </control>
                            <control type="label">
                                <width>280</width>
                                <right>30</right>
                                <height>100%</height>
                                <aligny>center</aligny>
                                <align>right</align>
                                <textcolor>Selected</textcolor>
                                <font>font_small</font>
                                <scroll>false</scroll>
                                <label>$INFO[ListItem.StartTime,   (,]$INFO[ListItem.EndTime, | ,)]</label>
                            </control>
                        </control>
                    </control>
                    </control>
                </control>
            </focusedlayout>
        </definition>
    </include>
</includes>

