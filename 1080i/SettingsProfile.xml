<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="34">
    <defaultcontrol always="true">4</defaultcontrol>
    <controls>

        <include>Global_Background</include>
        <include>View_Layout</include>

        <!-- GroupList -->
        <control type="group">
            <include>Dialog_Settings_Panel</include>
            <include>Animation_Home_Textbar_Slideover</include>
            <control type="group">
                <left>320</left>
                <right>-290</right>
                <top>37</top>
                <height>settings_height</height>

                <!-- Left Gradient Fade -->
                <control type="image">
                    <top>140</top>
                    <height>74</height>
                    <width>450</width>
                    <texture colordiffuse="$VAR[ColorHighlight]">common/white.png</texture>
                    <visible>Control.HasFocus(4)</visible>
                </control>
                <!-- Left Group -->
                <control type="radiobutton" id="4">
                    <top>140</top>
                    <onleft>300</onleft>
                    <onright>2</onright>
                    <width>450</width>
                    <label>20096</label>
                    <radioposx>395</radioposx>
                    <include>Defs_Settings_Button</include>
                </control>

                <!-- Right Group -->
                <control type="panel" id="2">
                    <description>Control Area</description>
                    <left>450</left>
                    <right>0</right>
                    <top>140</top>
                    <bottom>74</bottom>
                    <itemgap>0</itemgap>
                    <onleft>4</onleft>
                    <onup>noop</onup>
                    <ondown>noop</ondown>
                    <orientation>vertical</orientation>
                    <scrolltime>0</scrolltime>
                    <itemlayout height="74" width="1384">
                        <control type="label">
                            <right>50</right>
                            <left>50</left>
                            <textcolor>main_fg_100</textcolor>
                            <info>ListItem.Label</info>
                        </control>
                        <control type="label">
                            <right>50</right>
                            <left>50</left>
                            <align>right</align>
                            <font>font_tiny</font>
                            <textcolor>main_fg_100</textcolor>
                            <info>ListItem.Label2</info>
                        </control>
                    </itemlayout>

                    <focusedlayout height="74" width="1384">
                        <control type="group">
                            <control type="image">
                                <width>100%</width>
                                <texture border="5" colordiffuse="$VAR[ColorHighlight]">common/white.png</texture>
                            </control>
                            <control type="image">
                                <width>100%</width>
                                <texture border="5" colordiffuse="$VAR[ColorHighlight2]">common/gradient-diffuse-horizontal.png</texture>
                            </control>
                            <control type="label">
                                <left>50</left>
                                <right>50</right>
                                <textcolor>Selected</textcolor>
                                <info>ListItem.Label</info>
                            </control>
                            <control type="label">
                                <right>50</right>
                                <left>50</left>
                                <align>right</align>
                                <font>font_tiny</font>
                                <textcolor>Selected</textcolor>
                                <info>ListItem.Label2</info>
                            </control>
                        </control>
                    </focusedlayout>
                </control>

                <!-- Lines -->
                <include>Defs_Settings_Line</include>

                <!-- Arrows -->
                <include content="Defs_Settings_Arrows">
                    <param name="id" value="5" />
                </include>

                <!-- Header -->
                <include>Defs_Settings_Header</include>
                <control type="label">
                    <label>$LOCALIZE[31234]</label>
                    <include>Defs_Settings_InfoLine</include>
                </control>
            </control>
        </control>

        <include>Topbar</include>
        <include>Home</include>


        
    </controls>

</window>
