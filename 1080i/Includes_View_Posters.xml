<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="View_Posters">
        <param name="listtype" default="fixedlist" />
        <definition>
            <!-- Standard Wall -->
            <control type="panel" id="51">
                <visible>!Container.Content(songs) + !Container.Content(episodes) + !Container.Content(videos)</visible>
                <include>View_NotTheseWindows</include>
                <viewtype label="$LOCALIZE[536]">icon</viewtype>
                <include content="View_Forced">
                    <param name="string" value="$LOCALIZE[536]" />
                </include>
                <include content="View_Posters_Layout">
                    <param name="id" value="51" />
                    <param name="orientation" value="vertical" />
                  
                </include>
            </control>

            <!-- Showcase -->
            <control type="group">
                <bottom>30</bottom>
                <height>422.5</height>
                <control type="$PARAM[listtype]" id="52">
                    <focusposition>2</focusposition>
                    <movement>3</movement>
                    <viewtype label="$LOCALIZE[31161]">showcase</viewtype>
                    <onup>300</onup>
                    <ondown condition="Control.IsVisible(8000)">8000</ondown>
                    <ondown condition="Control.IsVisible(60)">60</ondown>
                    <onleft>52</onleft>
                    <onright>52</onright>
                    <include content="View_Forced">
                        <param name="string" value="$LOCALIZE[31161]" />
                    </include>
                    <visible>Container.Content(movies) | Container.Content(sets) | Container.Content(seasons) | Container.Content(tvshows) | Container.Content(albums) | Container.Content(artists)</visible>
                    <include>View_NotTheseWindows</include>
                    <include content="View_Posters_Layout">
                        <param name="id" value="52" />
                        <param name="orientation" value="horizontal" />
                        <param name="landscape" value="false" />
                        <param name="top_offset" value="34" />
                        <param name="bottom_offset" value="-10" />
                    </include>
                </control>
            </control>
            <include content="View_Posters_Info">
                <param name="bottom" value="450" />
                <param name="id" value="52" />
                <param name="left" value="50" />
                <param name="right" value="130" />
                <param name="width" value="1654" />
                <param name="altwidth" value="1234" />
                <param name="discart" value="true" />
            </include>

            <!-- Landscape -->
            <control type="panel" id="53">
                <visible>Container.Content(movies) | Container.Content(sets) | Container.Content(episodes) | Container.Content(tvshows) | Container.Content(images) | Container.Content(artists) | Container.Content(videos)</visible>
                <include>View_NotTheseWindows</include>
                <viewtype label="$LOCALIZE[31038]">icon</viewtype>
                <include content="View_Forced">
                    <param name="string" value="$LOCALIZE[31038]" />
                </include>
                <include content="View_Posters_Layout">
                    <param name="id" value="53" />
                    <param name="orientation" value="vertical" />
                    <param name="landscape" value="true" />
                </include>
            </control>

            <!-- Landscape Showcase -->
            <control type="group">
                <bottom>30</bottom>
                <height>422.5</height>
                <control type="$PARAM[listtype]" id="56">
                    <focusposition>1</focusposition>
                    <movement>1</movement>
                    <viewtype label="$LOCALIZE[31178]">icon</viewtype>
                    <onup>300</onup>
                    <ondown condition="Control.IsVisible(8000)">8000</ondown>
                    <ondown condition="Control.IsVisible(60)">60</ondown>
                    <onleft>56</onleft>
                    <onright>56</onright>
                    <include content="View_Forced">
                        <param name="string" value="$LOCALIZE[31178]" />
                    </include>
                    <visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) |  Container.Content(artists) | Container.Content(episodes) | Container.Content(videos)</visible>
                    <include>View_NotTheseWindows</include>
                    <include content="View_Posters_Layout">
                        <param name="id" value="56" />
                        <param name="orientation" value="horizontal" />
                        <param name="landscape" value="true" />
                        <param name="top_offset" value="34" />
                        <param name="bottom_offset" value="-10" />
                    </include>
                </control>
            </control>
            <include content="View_Posters_Info">
                <param name="bottom" value="450" />
                <param name="id" value="56" />
                <param name="left" value="50" />
                <param name="right" value="130" />
                <param name="width" value="1654" />
                <param name="altwidth" value="1234" />
                <param name="discart" value="true" />
            </include>

            <!-- Banners -->
            <control type="panel" id="58">
                <visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows)</visible>
                <include>View_NotTheseWindows</include>
                <viewtype label="$LOCALIZE[20020]">icon</viewtype>
                <include content="View_Forced">
                    <param name="string" value="$LOCALIZE[20020]" />
                </include>
                <include content="View_Posters_Layout">
                    <param name="id" value="58" />
                    <param name="orientation" value="vertical" />
                    <param name="banner" value="true" />
                    <param name="top_offset" value="30" />
                    <param name="bottom_offset" value="-10" />
                    <param name="top" value="0" />
                </include>
            </control>

            <!-- Lovefilm -->
            <control type="group">
                <visible>Control.IsVisible(59)</visible>
                <control type="group">
                    <right>120</right>
                    <left>40</left>
                    <top>40</top>
                    <bottom>40</bottom>
                    <control type="image">
                        <include>Defs_Shadow_Opaque</include>
                        <texture colordiffuse="main_bg_100">common/white.png</texture>
                    </control>
                </control>
                <control type="wraplist" id="59">
                    <visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(episodes)</visible>
                    <include>View_NotTheseWindows</include>
                    <viewtype label="$LOCALIZE[31231]">icon</viewtype>
                    <include content="View_Forced">
                        <param name="string" value="$LOCALIZE[31231]" />
                    </include>
                    <orientation>horizontal</orientation>
                    <focusposition>0</focusposition>
                    <preloaditems>2</preloaditems>
                    <right>120</right>
                    <left>40</left>
                    <top>40</top>
                    <bottom>40</bottom>
                    <onup>300</onup>
                    <ondown condition="Control.IsVisible(8000)">8000</ondown>
                    <ondown condition="!Control.IsVisible(8000)">300</ondown>
                    <pagecontrol>60</pagecontrol>
                    <scrolltime tween="cubic">400</scrolltime>
                    <itemlayout width="1674" height="lovefilm_height">
                        <control type="image">
                            <aspectratio>scale</aspectratio>
                            <texture background="true">$VAR[Image_Fanart]</texture>
                        </control>
                    </itemlayout>
                    <focusedlayout width="1674" height="lovefilm_height">
                        <control type="image">
                            <aspectratio>scale</aspectratio>
                            <texture background="true">$VAR[Image_Fanart]</texture>
                        </control>
                    </focusedlayout>
                </control>
                <control type="group">
                    <top>40</top>
                    <right>120</right>
                    <control type="image">
                        <top>0</top>
                        <right>0</right>
                        <width>56</width>
                        <height>56</height>
                        <texture colordiffuse="ff000000">$VAR[Image_Overlay_Corner]</texture>
                    </control>
                    <control type="image">
                        <top>3</top>
                        <right>3</right>
                        <width>24</width>
                        <height>24</height>
                        <texture>$VAR[Image_Overlay]</texture>
                    </control>
                    <visible>!String.IsEmpty(ListItem.Overlay)</visible>
                </control>
                <control type="group">
                    <right>120</right>
                    <left>40</left>
                    <height>130</height>
                    <bottom>40</bottom>
                    <control type="image">
                        <texture colordiffuse="main_bg_70">common/white.png</texture>
                    </control>
                    <control type="label">
                        <height>92</height>
                        <left>30</left>
                        <right>90</right>
                        <font>font_topbar</font>
                        <label>$INFO[ListItem.Label]</label>
                        <textcolor>main_fg_100</textcolor>
                    </control>
                    
                    <control type="label">
                        <left>30</left>
                        <right>530</right>
                        <bottom>0</bottom>
                        <height>78</height>
                        <label>$VAR[Label_ShowCase_InfoLine]</label>
                        <textcolor>$VAR[ColorHighlight]</textcolor>
                        <align>left</align>
                        <font>font_small</font>
                    </control>
                    
                    <control type="group">
                        <left>30</left>
                        <right>30</right>
                        <top>76</top>
                        <include content="Object_Ratings">
                            <param name="directory" value="color" />
                            <param name="align" value="right" />
                        </include>
                    </control>
                </control>
            </control>
        </definition>
    </include>

    <include name="View_Posters_Info">
        <param name="plot_height" default="170" />
        <definition>
            <control type="group">
                <left>$PARAM[left]</left>
                <right>$PARAM[right]</right>
                <control type="group">
                    <visible>[[String.IsEmpty(ListItem.Art(clearlogo)) | Skin.HasSetting(DisableClearLogo)] + [String.IsEmpty(ListItem.Art(discart)) | Skin.HasSetting(DisableDiscArt)]] | !$PARAM[discart]</visible>
                    <include content="View_Posters_Info_Content">
                        <param name="id" value="$PARAM[id]" />
                        <param name="width" value="$PARAM[width]" />
                        <param name="bottom" value="$PARAM[bottom]" />
                        <param name="plot_height" value="$PARAM[plot_height]" />
                    </include>
                </control>
                <control type="group">
                    <right>420</right>
                    <visible>!String.IsEmpty(ListItem.Art(discart)) + $PARAM[discart] + !Skin.HasSetting(DisableDiscArt)</visible>
                    <include content="View_Posters_Info_Content">
                        <param name="id" value="$PARAM[id]" />
                        <param name="width" value="$PARAM[altwidth]" />
                        <param name="bottom" value="$PARAM[bottom]" />
                        <param name="plot_height" value="$PARAM[plot_height]" />
                    </include>
                </control>
                <control type="group">
                    <visible>!String.IsEmpty(ListItem.Art(clearlogo)) + [String.IsEmpty(ListItem.Art(discart)) | Skin.HasSetting(DisableDiscArt)] + $PARAM[discart] + !Skin.HasSetting(DisableClearLogo)</visible>
                    <include content="View_Posters_Info_Content">
                        <param name="id" value="$PARAM[id]" />
                        <param name="width" value="$PARAM[altwidth]" />
                        <param name="right" value="420" />
                        <param name="bottom" value="$PARAM[bottom]" />
                        <param name="plot_height" value="$PARAM[plot_height]" />
                    </include>
                </control>
            </control>
            <control type="image">
                <top>50</top>
                <right>130</right>
                <height>380</height>
                <width>380</width>
                <aspectratio>keep</aspectratio>
                <visible>Control.IsVisible($PARAM[id])</visible>
                <visible>$PARAM[discart]</visible>
                <texture background="true">$INFO[ListItem.Art(discart)]</texture>
                <visible>!Skin.HasSetting(DisableDiscArt)</visible>
            </control>
            <control type="image">
                <top>50</top>
                <right>150</right>
                <height>380</height>
                <width>380</width>
                <aspectratio aligny="top">keep</aspectratio>
                <visible>Control.IsVisible($PARAM[id])</visible>
                <visible>$PARAM[discart]</visible>
                <visible>!Skin.HasSetting(DisableClearLogo)</visible>
                <visible>String.IsEmpty(ListItem.Art(discart)) | Skin.HasSetting(DisableDiscArt)</visible>
                <texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
            </control>
        </definition>
    </include>

    <include name="View_Posters_Info_Content">
        <control type="grouplist">
            <visible>Container.Content(movies) | Container.Content(sets) | Container.Content(seasons) | Container.Content(tvshows) | Container.Content(episodes) | Container.Content(videos)</visible>
            <visible>Control.IsVisible($PARAM[id])</visible>
            <bottom>$PARAM[bottom]</bottom>
            <top>30</top>
            <left>0</left>
            <right>0</right>
            <orientation>vertical</orientation>
            <usecontrolcoords>true</usecontrolcoords>
            <itemgap>0</itemgap>
            <control type="label">
                <left>0</left>
                <right>$PARAM[right]</right>
                <label>$INFO[ListItem.Label]</label>
                <height>90</height>
                <aligny>top</aligny>
                <textcolor>main_fg_100</textcolor>
                <font>font_showcase_title</font>
            </control>
            <control type="label">
                <left>0</left>
                <right>$PARAM[right]</right>
                <label>$VAR[Label_ShowCase_InfoLine]</label>
                <height>40</height>
                <aligny>top</aligny>
                <textcolor>$VAR[ColorHighlight]</textcolor>
                <font>font_small</font>
            </control>
            <control type="group">
                <height>80</height>
                <left>0</left>
                <right>$PARAM[right]</right>
                <control type="group">
                    <top>-17</top>
                    <left>-16</left>
                    <include>Object_StarRating</include>
                </control>
                <control type="group">
                    <top>24</top>
                    <left>256</left>
                    <width>$PARAM[width]</width>
                    <include content="Object_Ratings">
                        <param name="directory" value="color" />
                        <param name="align" value="left" />
                        <param name="width" value="$PARAM[width]" />
                    </include>
                </control>
            </control>
            <control type="label">
                <left>0</left>
                <right>$PARAM[right]</right>
                <label>$VAR[Label_Genre]</label>
                <height>60</height>
                <aligny>top</aligny>
                <textcolor>main_fg_100</textcolor>
                <font>font_small</font>
            </control>
            <control type="textbox">
                <label>$VAR[Label_Plot]</label>
                <height>$PARAM[plot_height]</height>
                <aligny>top</aligny>
                <textcolor>main_fg_70</textcolor>
                <font>font_plotbox</font>
            </control>
        </control>
        <control type="grouplist">
            <visible>Container.Content(albums) | Container.Content(artists) | Container.Content(songs) | Container.Content(addons)</visible>
            <visible>Control.IsVisible($PARAM[id])</visible>
            <bottom>$PARAM[bottom]</bottom>
            <top>30</top>
            <left>0</left>
            <right>0</right>
            <orientation>vertical</orientation>
            <usecontrolcoords>true</usecontrolcoords>
            <itemgap>0</itemgap>
            <control type="label">
                <label>$VAR[Label_MainTitle]</label>
                <height>90</height>
                <aligny>top</aligny>
                <textcolor>main_fg_100</textcolor>
                <font>font_showcase_title</font>
            </control>
            <control type="label">
                <label>$VAR[Label_SubTitle]</label>
                <height>40</height>
                <aligny>top</aligny>
                <textcolor>$VAR[ColorHighlight]</textcolor>
                <font>font_small</font>
            </control>
            <control type="group">
                <height>80</height>
                <control type="group">
                    <top>-17</top>
                    <left>-16</left>
                    <include content="Object_StarRating_Music">
                        <param name="align" value="left" />
                    </include>
                </control>
            </control>
            <control type="textbox">
                <label fallback="19055">$VAR[Label_Plot]</label>
                <height>infolist3_plot_height</height>
                <aligny>top</aligny>
                <textcolor>main_fg_70</textcolor>
                <font>font_plotbox</font>
            </control>
        </control>
    </include>

    <include name="View_Posters_Layout">
        <param name="id" default="51" />
        <param name="setfanart" default="false" />
        <param name="orientation" default="vertical" />
        <param name="landscape" default="false" />
        <param name="banner" default="false" />
        <param name="top_offset" default="30" />
        <param name="bottom_offset" default="-10" />
        <param name="top" default="0" />
        <definition>
            <top>$PARAM[top]</top>
            <focusposition>3</focusposition>
            <movement>3</movement>
            <orientation>$PARAM[orientation]</orientation>
            <left>0</left>
            <right>90</right>
            <include condition="!Window.IsVisible(DialogVideoInfo.xml)">View_Movement_Horizontal</include>
            <preloaditems>2</preloaditems>
            <pagecontrol>60</pagecontrol>
            <scrolltime tween="quadratic">400</scrolltime>
            <onfocus>SetProperty(ViewType,Posters,Home)</onfocus>
            <itemlayout width="285" height="412.5" condition="!$PARAM[landscape] + !$PARAM[banner]">
                <control type="group">
                    <left>30</left>
                    <top>$PARAM[top_offset]</top>
                    <right>-10</right>
                    <bottom>$PARAM[bottom_offset]</bottom>
                    <control type="group" description="ParentFolder and DefaultIcon">
                        <visible>ListItem.IsParentFolder | String.StartsWith(ListItem.Icon,Default) | ![!String.IsEmpty(ListItem.Art(poster)) | !String.IsEmpty(ListItem.Art(tvshow.poster)) | !String.IsEmpty(ListItem.Art(season.poster))]</visible>
                        <control type="image">
                            <bordersize>10</bordersize>
                            <include>Defs_Shadow_Small</include>
                            <aspectratio scalediffuse="false">scale</aspectratio>
                            <texture colordiffuse="PosterBack">common/white.png</texture>
                        </control>
                        <control type="image">
                            <height>265</height>
                            <bordersize>10</bordersize>
                            <texture colordiffuse="main_bg_70">common/white.png</texture>
                        </control>
                        <control type="image">
                            <height>265</height>
                            <bordersize>10</bordersize>
                            <aspectratio aligny="center">scale</aspectratio>
                            <texture colordiffuse="main_fg_70" background="true">$INFO[ListItem.Icon]</texture>
                            <visible>String.StartsWith(ListItem.Icon,Default)</visible>
                            <visible>![Container.Content(genres) | Container.Content(studios) | Container.Content(years) | Container.Content(directors) | Container.Content(countries) | Container.Content(tags) | Container.Content(playlists)]</visible>
                        </control>
                        <control type="image">
                            <height>265</height>
                            <bordersize>10</bordersize>
                            <aspectratio aligny="center">scale</aspectratio>
                            <texture background="true">$INFO[ListItem.Icon]</texture>
                            <visible>!String.StartsWith(ListItem.Icon,Default)</visible>
                            <visible>![Container.Content(genres) | Container.Content(studios) | Container.Content(years) | Container.Content(directors) | Container.Content(countries) | Container.Content(tags) | Container.Content(playlists)]</visible>
                        </control>
                        <control type="image">
                            <height>265</height>
                            <bordersize>70</bordersize>
                            <aspectratio aligny="center">keep</aspectratio>
                            <texture background="true" colordiffuse="main_fg_70" fallback="DefaultGenres.png">$VAR[Image_GenreIcons]</texture>
                            <visible>Container.Content(genres)</visible>
                        </control>
                        <control type="image">
                            <height>265</height>
                            <bordersize>10</bordersize>
                            <aspectratio aligny="center">keep</aspectratio>
                            <texture background="true" colordiffuse="main_fg_70" fallback="DefaultStudios.png">$INFO[ListItem.Label,resource://resource.images.studios.white/,.png]</texture>
                            <visible>Container.Content(studios)</visible>
                        </control>
                        <control type="textbox">
                            <height>265</height>
                            <left>20</left>
                            <right>20</right>
                            <align>center</align>
                            <aligny>center</aligny>
                            <font>font_poster_text</font>
                            <textcolor>main_fg_70</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                            <visible>Container.Content(years) | Container.Content(directors) | Container.Content(countries) | Container.Content(tags) | Container.Content(playlists)</visible>
                        </control>
                        <control type="group">
                            <top>255</top>
                            <bottom>10</bottom>
                            <left>10</left>
                            <right>10</right>
                            <control type="image">
                                <texture colordiffuse="PosterBack">common/white.png</texture>
                            </control>
                            <control type="textbox">
                                <height>95</height>
                                <centertop>50%</centertop>
                                <left>20</left>
                                <right>20</right>
                                <align>center</align>
                                <aligny>center</aligny>
                                <font>font_tiny</font>
                                <textcolor>main_fg_70</textcolor>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                        </control>
                    </control>
                    <control type="image" description="Poster">
                        <bordersize>10</bordersize>
                        <include>Defs_Shadow_Small</include>
                        <aspectratio scalediffuse="false">scale</aspectratio>
                        <texture fallback="DefaultAddonNone.png" background="true">$VAR[Image_Poster]</texture>
                        <visible>!ListItem.IsParentFolder</visible>
                        <visible>!String.StartsWith(ListItem.Icon,Default)</visible>
                        <visible>[!String.IsEmpty(ListItem.Art(poster)) | !String.IsEmpty(ListItem.Art(tvshow.poster)) | !String.IsEmpty(ListItem.Art(season.poster))]</visible>
                    </control>
                    <include>View_WatchedOverlay</include>
                </control>
            </itemlayout>
            <focusedlayout width="285" height="412.5" condition="!$PARAM[landscape] + !$PARAM[banner]">
                <include content="View_Position_Button">
                    <param name="id" value="$PARAM[id]" />
                    <param name="setfanart" value="$PARAM[setfanart]" />
                </include>
                <control type="group">
                    <left>30</left>
                    <top>$PARAM[top_offset]</top>
                    <right>-10</right>
                    <bottom>$PARAM[bottom_offset]</bottom>
                    <include>Animation_FocusBounce</include>
                    <control type="group" description="ParentFolder and DefaultIcon">
                        <visible>ListItem.IsParentFolder | String.StartsWith(ListItem.Icon,Default) | ![!String.IsEmpty(ListItem.Art(poster)) | !String.IsEmpty(ListItem.Art(tvshow.poster)) | !String.IsEmpty(ListItem.Art(season.poster))]</visible>
                        <control type="image">
                            <bordersize>10</bordersize>
                            <include>Defs_Shadow_Small</include>
                            <aspectratio scalediffuse="false">scale</aspectratio>
                            <texture colordiffuse="PosterBack">common/white.png</texture>
                        </control>
                        <control type="image">
                            <height>265</height>
                            <bordersize>10</bordersize>
                            <texture colordiffuse="main_bg_70">common/white.png</texture>
                        </control>
                        <control type="image">
                            <height>265</height>
                            <bordersize>10</bordersize>
                            <aspectratio aligny="center">scale</aspectratio>
                            <texture colordiffuse="Selected" background="true">$INFO[ListItem.Icon]</texture>
                            <visible>![Container.Content(genres) | Container.Content(studios) | Container.Content(years) | Container.Content(directors) | Container.Content(countries) | Container.Content(tags) | Container.Content(playlists)]</visible>
                        </control>
                        <control type="image">
                            <height>265</height>
                            <bordersize>70</bordersize>
                            <aspectratio aligny="center">keep</aspectratio>
                            <texture background="true" colordiffuse="Selected" fallback="DefaultGenres.png">$VAR[Image_GenreIcons]</texture>
                            <visible>Container.Content(genres)</visible>
                        </control>
                        <control type="image">
                            <height>265</height>
                            <bordersize>10</bordersize>
                            <aspectratio aligny="center">keep</aspectratio>
                            <texture background="true" colordiffuse="Selected" fallback="DefaultStudios.png">$INFO[ListItem.Label,resource://resource.images.studios.white/,.png]</texture>
                            <visible>Container.Content(studios)</visible>
                        </control>
                        <control type="textbox">
                            <height>265</height>
                            <left>20</left>
                            <right>20</right>
                            <align>center</align>
                            <aligny>center</aligny>
                            <font>font_poster_text</font>
                            <textcolor>Selected</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                            <visible>Container.Content(years) | Container.Content(directors) | Container.Content(countries) | Container.Content(tags) | Container.Content(playlists)</visible>
                        </control>
                        <control type="group">
                            <top>255</top>
                            <bottom>10</bottom>
                            <left>10</left>
                            <right>10</right>
                            <control type="image">
                                <texture colordiffuse="PosterBack">common/white.png</texture>
                            </control>
                            <control type="textbox">
                                <height>95</height>
                                <centertop>50%</centertop>
                                <left>20</left>
                                <right>20</right>
