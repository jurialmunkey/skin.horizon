            <include content="View_Posters_Info">
                <param name="bottom" value="470" />
                <param name="id" value="52" />
                <param name="left" value="50" />
                <param name="right" value="130" />
                <param name="width" value="1654" />
                <param name="altwidth" value="1234" />
